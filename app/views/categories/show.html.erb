<h1 class="text-2xl font-bold text-center my-6 text-marrom-profundo">Category Show Page</h1>

<div class="min-h-screen flex justify-center bg-bege-suave">
  <div class="flex flex-wrap flex-col mt-6">
    <h2 class="text-lg text-gray-700">Filter</h2>
  </div>

  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @products.empty? %>
      <p class="text-2xl text-left text-gray-700">No products found</p>
    <% else %>
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="max-w-xs flex flex-col p-4 justify-center items-center bg-white rounded shadow-sm hover:shadow-md transition-shadow">
            <%= product.images.first ? 
                image_tag(product.images.first.variant(:medium), class: "rounded") : 
                image_tag("https://placehold.co/250x250/FEFAE0/BC6C25?text=Sem+Imagem", class:"rounded") %>
            <p class="mt-6 font-medium text-marrom-profundo text-center">
              <%= product.name %>
            </p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>