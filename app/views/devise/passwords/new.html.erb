<div class="min-h-screen flex items-center justify-center bg-bege-suave px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-marrom-profundo mb-6">Recuperar Senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, "E-mail", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite seu e-mail", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-laranja-escuro" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Enviar instruÃ§Ãµes para redefinir senha", class: "w-full bg-laranja-escuro hover:bg-[#a85d1d] text-white font-semibold py-2 px-4 rounded transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Lembrou da senha? Fazer login", new_session_path(resource_name), class: "text-verde-terra hover:text-laranja-natural text-sm" %>
    </div>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>