<div class="min-h-screen flex items-center justify-center bg-bege-suave px-4">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center text-marrom-profundo mb-6">Entrar</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-laranja-escuro" %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-laranja-escuro" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "Lembrar-me", class: "text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.submit "Entrar", class: "w-full bg-laranja-escuro hover:bg-[#a85d1d] text-white font-semibold py-2 px-4 rounded transition" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-verde-terra hover:text-laranja-natural text-sm" %>
    </div>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>